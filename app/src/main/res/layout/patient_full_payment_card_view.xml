<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="10dp"
app:cardCornerRadius="10dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvLabelLastUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat"
        android:text="Last Updated: "
        android:textColor="#494747"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProcedure" />

    <TextView
        android:id="@+id/tvFPLastUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="text"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvLabelLastUpdate"
        app:layout_constraintStart_toEndOf="@+id/tvLabelLastUpdate"
        app:layout_constraintTop_toTopOf="@+id/tvLabelLastUpdate" />


    <TextView
        android:id="@+id/tvLabelDentist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat"
        android:text="Dentist:"
        android:textColor="#494747"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelLastUpdate" />

    <TextView
        android:id="@+id/tvInsDentist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="text"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvLabelDentist"
        app:layout_constraintStart_toEndOf="@+id/tvLabelDentist"
        app:layout_constraintTop_toTopOf="@+id/tvLabelDentist" />

    <TextView
        android:id="@+id/tvLabelDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat"
        android:text="Payment Date:"
        android:textColor="#494747"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelDentist" />

    <TextView
        android:id="@+id/tvFPDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="text"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvLabelDate"
        app:layout_constraintStart_toEndOf="@+id/tvLabelDate"
        app:layout_constraintTop_toTopOf="@+id/tvLabelDate" />

    <TextView
        android:id="@+id/tvLabelMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat"
        android:text="Payment Method: "
        android:textColor="#494747"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelDate" />

    <TextView
        android:id="@+id/tvFPMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="text"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvLabelMethod"
        app:layout_constraintStart_toEndOf="@+id/tvLabelMethod"
        app:layout_constraintTop_toTopOf="@+id/tvLabelMethod" />
    <TextView
        android:id="@+id/tvLabelAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat"
        android:text="Total Amount: "
        android:textColor="#494747"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelMethod" />

    <TextView
        android:id="@+id/tvFPAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="text"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvLabelAmount"
        app:layout_constraintStart_toEndOf="@+id/tvLabelAmount"
        app:layout_constraintTop_toTopOf="@+id/tvLabelAmount" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tvFPAmount"
        tools:layout_editor_absoluteX="20dp">

<!--        <ImageButton-->
<!--            android:id="@+id/ibPPresPDF"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_weight="1"-->
<!--            app:srcCompat="@drawable/ic_baseline_picture_as_pdf_24" />-->

        <ImageButton
            android:id="@+id/ibPayEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_edit_24" />

        <ImageButton
            android:id="@+id/ibPayDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_delete_outline_24" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvProcedure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="TextView"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>