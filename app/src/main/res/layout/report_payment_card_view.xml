<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvPRName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="PlanName"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvLabelLastUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:text="Date:"
            android:textColor="#494747"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPRName" />

        <TextView
            android:id="@+id/tvPRDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="text"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvLabelLastUpdate"
            app:layout_constraintStart_toEndOf="@+id/tvLabelLastUpdate"
            app:layout_constraintTop_toTopOf="@+id/tvLabelLastUpdate" />


        <TextView
            android:id="@+id/tvLabelAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat"
            android:text="Total Amount: "
            android:textColor="#494747"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelLastUpdate" />

        <TextView
            android:id="@+id/tvPRAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="text"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvLabelAmount"
            app:layout_constraintStart_toEndOf="@+id/tvLabelAmount"
            app:layout_constraintTop_toTopOf="@+id/tvLabelAmount" />

        <TextView
            android:id="@+id/tvLabelTotalPaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat"
            android:text="Total Paid: "
            android:textColor="#494747"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelAmount" />

        <TextView
            android:id="@+id/tvPRTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="text"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvLabelTotalPaid"
            app:layout_constraintStart_toEndOf="@+id/tvLabelTotalPaid"
            app:layout_constraintTop_toTopOf="@+id/tvLabelTotalPaid" />

        <TextView
            android:id="@+id/tvLabelNoPayments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat"
            android:text="No. of Payments: "
            android:textColor="#494747"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelTotalPaid" />

        <TextView
            android:id="@+id/tvPRCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="text"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvLabelNoPayments"
            app:layout_constraintStart_toEndOf="@+id/tvLabelNoPayments"
            app:layout_constraintTop_toTopOf="@+id/tvLabelNoPayments" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>