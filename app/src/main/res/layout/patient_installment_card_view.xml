<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvPlanName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="PlanName"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvLabelLastUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:text="Last Updated: "
            android:textColor="#494747"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPlanName" />

        <TextView
            android:id="@+id/tvFPLastUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="text"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvLabelLastUpdate"
            app:layout_constraintStart_toEndOf="@+id/tvLabelLastUpdate"
            app:layout_constraintTop_toTopOf="@+id/tvLabelLastUpdate" />


        <TextView
            android:id="@+id/tvLabelDentist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat"
            android:text="Dentist:"
            android:textColor="#494747"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelLastUpdate" />

        <TextView
            android:id="@+id/tvInsDentist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="text"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvLabelDentist"
            app:layout_constraintStart_toEndOf="@+id/tvLabelDentist"
            app:layout_constraintTop_toTopOf="@+id/tvLabelDentist" />

        <TextView
            android:id="@+id/tvLabelDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat"
            android:text="Payment Date:"
            android:textColor="#494747"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelDentist" />

        <TextView
            android:id="@+id/tvFPDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="text"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvLabelDate"
            app:layout_constraintStart_toEndOf="@+id/tvLabelDate"
            app:layout_constraintTop_toTopOf="@+id/tvLabelDate" />

        <TextView
            android:id="@+id/tvLabelAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat"
            android:text="Total Amount: "
            android:textColor="#494747"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelDate" />

        <TextView
            android:id="@+id/tvFPAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="text"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvLabelAmount"
            app:layout_constraintStart_toEndOf="@+id/tvLabelAmount"
            app:layout_constraintTop_toTopOf="@+id/tvLabelAmount" />
        <TextView
            android:id="@+id/tvLabelTotalPaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat"
            android:text="Total Paid: "
            android:textColor="#494747"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelAmount" />

        <TextView
            android:id="@+id/tvFPTotalPaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="text"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvLabelTotalPaid"
            app:layout_constraintStart_toEndOf="@+id/tvLabelTotalPaid"
            app:layout_constraintTop_toTopOf="@+id/tvLabelTotalPaid" />
        <TextView
            android:id="@+id/tvLabelBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat"
            android:text="Balance: "
            android:textColor="#494747"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelTotalPaid" />

        <TextView
            android:id="@+id/tvFPBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="text"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvLabelBalance"
            app:layout_constraintStart_toEndOf="@+id/tvLabelBalance"
            app:layout_constraintTop_toTopOf="@+id/tvLabelBalance" />
        <TextView
            android:id="@+id/tvLabelNoPayments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat"
            android:text="No. of Payments: "
            android:textColor="#494747"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelBalance" />

        <TextView
            android:id="@+id/tvFPNoPayments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="text"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvLabelNoPayments"
            app:layout_constraintStart_toEndOf="@+id/tvLabelNoPayments"
            app:layout_constraintTop_toTopOf="@+id/tvLabelNoPayments" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tvFPNoPayments"
            tools:layout_editor_absoluteX="20dp">

            <ImageButton
                android:id="@+id/ibPayView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_remove_red_eye_24" />

            <ImageButton
                android:id="@+id/ibPayEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_edit_24" />

            <ImageButton
                android:id="@+id/ibPPresDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_delete_outline_24" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>